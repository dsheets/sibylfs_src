  (*-------------------------------*)
  (* Observer management           *)
  (*-------------------------------*)

  val dhops_observe_dir_register : dir_heap_state -> dh_dir_ref -> (dir_heap_state * ty_od_handle dh_dir_ref)
  let dhops_observe_dir_register s d0_ref = (
    let d0 = fromJust (dh_lookup_dir s d0_ref) in

    let dh =
      fmap_fold (fun k _ m ->
                 if k >= m
                 then succ k
                 else m (* coverage:impossible -we are looking for the maximum, the else would mean taking a minimum *))
                d0.dhd_observers 0
    in
    let d1 = <| d0 with dhd_observers = fmap_update d0.dhd_observers (dh,[]) |> in

    let s' = dh_update_dirs s d0_ref (Just d1) in
    (s', OD_handle (dh, d0_ref))
  )

  val dhops_observe_dir : dir_heap_state -> (ty_od_handle dh_dir_ref) -> (dir_heap_state * list ty_od_entry)
  let dhops_observe_dir s (OD_handle (dh, d0_ref)) = (
    let d0 = fromJust (dh_lookup_dir s d0_ref) in

    let entries = List.reverse (fromJust (fmap_lookup d0.dhd_observers dh)) in
    let d1 = <| d0 with dhd_observers = fmap_update d0.dhd_observers (dh,[]) |> in

    let s' = dh_update_dirs s d0_ref (Just d1) in
    (s', entries))

  val dhops_observe_dir_unregister : dir_heap_state -> (ty_od_handle dh_dir_ref) -> dir_heap_state
  let dhops_observe_dir_unregister s (OD_handle (dh, d0_ref)) = (
    let d0 = fromJust (dh_lookup_dir s d0_ref) in
    let d1 = <| d0 with dhd_observers = fmap_remove d0.dhd_observers dh |> in
    let s' = dh_update_dirs s d0_ref (Just d1) in
    s'
  )


#ifdef aspect_time
open Fs_time
  (*-------------------------------*)
  (* time management               *)
  (*-------------------------------*)

  val dhops_get_timestamp :
    dir_heap_state ->
    dh_entry ->
    ts_type ->
    ty_logical_timestamp
  let dhops_get_timestamp s0 entry t_type =
    (match entry with
     | File_ref_entry(i0_ref) ->
        let file = fromJust(dh_lookup_file s0 i0_ref) in
         (match t_type with
          | TS_Access       -> file.dhf_atime
          | TS_Modification -> file.dhf_mtime
          | TS_Change       -> file.dhf_ctime end)
     | Dir_ref_entry(d0_ref) ->
        let dir = fromJust(dh_lookup_dir s0 d0_ref) in
        (match t_type with
         | TS_Access       -> dir.dhd_atime
         | TS_Modification -> dir.dhd_mtime
         | TS_Change       -> dir.dhd_ctime end)
     end)

  val dhops_set_timestamp :
    dir_heap_state ->
    dh_entry ->
    ts_type ->
    ty_logical_timestamp ->
    dir_heap_state
  let dhops_set_timestamp s0 entry t_type value =
    let s0 =
      (match entry with
        | File_ref_entry(f_ref) ->
          let file = fromJust(dh_lookup_file s0 f_ref) in
          let up_files f =
            dh_update_files s0 f_ref (Just f)
          in
          (match t_type with
            | TS_Access -> up_files (<| file with dhf_atime = value |>)
            | TS_Modification -> up_files (<| file with dhf_mtime = value |>)
            | TS_Change -> up_files (<| file with dhf_ctime = value |>)
           end)
        | Dir_ref_entry(d_ref) ->
          let dir = fromJust(dh_lookup_dir s0 d_ref) in
          let up_dirs f =
            dh_update_dirs s0 d_ref (Just f)
          in
          (match t_type with
            | TS_Access -> up_dirs (<| dir with dhd_atime = value |>)
            | TS_Modification -> up_dirs (<| dir with dhd_mtime = value |>)
            | TS_Change -> up_dirs (<| dir with dhd_ctime = value |>)
           end)
          end)
    in
    s0

  val dhops_update_all_marked_timestamps :
    dir_heap_state ->
    dir_heap_state
  let dhops_update_all_marked_ts s0 =
    let new_t = Logical_timestamp s0.dhs_clock in
    let update_marked t = if (is_marked t) then new_t else t in
    let update_marked_ts_dir d =
      <|d with
        dhd_atime = update_marked d.dhd_atime;
        dhd_mtime = update_marked d.dhd_mtime;
        dhd_ctime = update_marked d.dhd_ctime;
        |>
    in
    let update_marked_ts_file f =
      <|f with
        dhf_atime = update_marked f.dhf_atime;
        dhf_mtime = update_marked f.dhf_mtime;
        dhf_ctime = update_marked f.dhf_ctime;
        |>
    in
    let dirs = fmap_image update_marked_ts_dir s0.dhs_state_fs.dhs_dirs in
    let files = fmap_image update_marked_ts_file s0.dhs_state_fs.dhs_files in
    <| s0 with dhs_state_fs=
       <|
         dhs_dirs=dirs;dhs_files=files;dhs_free_inodes=s0.dhs_state_fs.dhs_free_inodes
       |>
    |>

  val update_timestamps :
    dh_entry ->
    dir_heap_state ->
    dir_heap_state
  let update_timestamps e s0 =
    List.foldl
      (fun s1 t -> dhops_set_timestamp s1 e t (Logical_timestamp s1.dhs_clock))
      s0
      [TS_Access;TS_Modification;TS_Change]

  val dhops_periodic_update :
    dir_heap_state ->
    finset dir_heap_state
  let dhops_periodic_update s0 =
    (* get all marked dirs and marked files with their ids*)
    let m_dirs =
      List.filter
        (fun (_,dir) -> (is_marked dir.dhd_atime) || (is_marked dir.dhd_mtime) || (is_marked dir.dhd_ctime))
        (fmap_bindings (s0.dhs_state_fs.dhs_dirs))
    in
    let m_files=
      List.filter
        (fun (_,file) -> (is_marked file.dhf_atime) || (is_marked file.dhf_mtime) || (is_marked file.dhf_ctime))
        (fmap_bindings (s0.dhs_state_fs.dhs_files))
    in
    (* get all possible states obtainable by periodic-updating dirs and files together *)
    (* we need to mix files and dir ids *)
    let m_entries =
      (List.map (fun (id,_) -> Dir_ref_entry id) m_dirs) ++
        (List.map (fun (id,_) -> File_ref_entry id) m_files)
    in
    let m_entries_powerset =
      List.foldr (fun x rest -> rest ++ List.map (fun ys -> x::ys) rest) [[]] m_entries
    in
    (* we need to create a state for each element of
    nondeterminstic_updated_entries, and this state must have updated
    timestamps for the corresponding entries *)
    let possible_states =
      finset_image
        (fun l -> List.foldl (fun s1 e -> update_timestamps e s1) s0 l)
        (finset_from_list m_entries_powerset) in
    possible_states

#endif

#ifdef aspect_perms
  (*-------------------------------*)
  (* permission management         *)
  (*-------------------------------*)

  val dhops_set_perm_file : dir_heap_state -> file_perm -> dh_file_ref -> dir_heap_state
  let dhops_set_perm_file s0 perms i0_ref =
    match dh_lookup_file s0 i0_ref with
      | Nothing -> s0 (* do nothing if the ref is not valid *) (* coverage:impossible -all the calling functions perform path resolution to get the ref *)
      | Just dh_file' -> dh_update_files s0 i0_ref (Just (<| dh_file' with dhf_perm = perms |>))
    end

  val dhops_set_perm_dir : dir_heap_state -> file_perm -> dh_dir_ref -> dir_heap_state
  let dhops_set_perm_dir s0 perms d0_ref =
    match dh_lookup_dir s0 d0_ref with
      | Nothing -> s0 (* do nothing if the ref is not valid *) (* coverage:impossible -all the calling functions perform path resolution to get the ref *)
      | Just dh_dir' -> dh_update_dirs s0 d0_ref (Just (<| dh_dir' with dhd_perm = perms |>))
    end

  val dhops_chown_file : dir_heap_state -> (uid * gid) -> dh_file_ref -> dir_heap_state
  let dhops_chown_file s0 ugid i0_ref =
    match dh_lookup_file s0 i0_ref with
      | Nothing -> s0 (* do nothing if the ref is not valid *) (* coverage:impossible -all the calling functions perform path resolution to get the ref *)
      | Just dh_file' -> dh_update_files s0 i0_ref
           (Just (<| dh_file' with dhf_uid = fst ugid; dhf_gid = snd ugid |>))
    end

  val dhops_chown_dir : dir_heap_state -> (uid * gid) -> dh_dir_ref -> dir_heap_state
  let dhops_chown_dir s0 ugid d0_ref =
    match dh_lookup_dir s0 d0_ref with
      | Nothing -> s0 (* do nothing if the ref is not valid *) (* coverage:impossible -all the calling functions perform path resolution to get the ref *)
      | Just dh_dir' -> dh_update_dirs s0 d0_ref
           (Just (<| dh_dir' with dhd_uid = fst ugid; dhd_gid = snd ugid |>))
    end

  val dir_heap_perm_ops : perm_ops dh_dir_ref dh_file_ref dir_heap_state
  let dir_heap_perm_ops = <|
    pops_set_perm_file = dhops_set_perm_file;
    pops_set_perm_dir = dhops_set_perm_dir;

    pops_chown_file = dhops_chown_file;
    pops_chown_dir = dhops_chown_dir;

    pops_uid_is_superuser = (fun _ uid -> uid = root_uid)
  |>
